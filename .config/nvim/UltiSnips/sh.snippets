snippet ive "if variable empty"
if [[ ! -z $1 ]]; then
    $2
fi

$0
endsnippet
	
snippet ife "if file exists"
if [[ -f $1 ]]; then
    $2
fi

$0
endsnippet
snippet ifne "if file not exists"
if [[ ! -f $1 ]]; then
    $2
fi

$0
endsnippet
snippet u "usage"
# Usage
if [ $# -eq ${1:0} ]; then
   echo "Usage: $2"
   exit 1
fi
endsnippet

snippet cv "function"
$1() 
{
    $2
}
endsnippet
snippet pub "function"
$1() 
{
    $2
}
endsnippet
snippet a "alias"
alias $1="$2"
endsnippet
