{
    "languageserver": {
        "bash": {
           "command": "bash-language-server",
           "filetypes": ["sh"],
           "args": ["start"],
           "ignoredRootPaths": ["~"]
           
        }
        
    },
    "diagnostic.virtualText": true,
    "diagnostic.displayByAle": false,
    "tsserver.log":"normal",
    "javascript.implementationsCodeLens.enable": true,
    "suggest.noselect": false,
    "codeLens.enable": true,
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.showUnused": true,
    "tsserver.useLocalTsdk": true,
    "tsserver.tsdk": "./node_modules/typescript/lib",

    "tsserver.implicitProjectConfig.checkJs": true,
    "tsserver.implicitProjectConfig.experimentalDecorators": true,
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.promptInput": true,
    "javascript.suggest.names": true,
    "javascript.suggest.enabled": true,
    "typescript.suggest.importStatements": true,
    "typescript.inlayHints.enable": true,
    "python.pythonPath": "~/venvs/neovim/bin/python",
    "ruff.enableExperimentalFormatter": true,
    "python.formatting.provider": "none",
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.parameterTypes": false,
    "pyright.inlayHints.functionReturnTypes": false,
    "python.linting.ruffEnabled": true,
    "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "eslint.workingDirectories": [
        {"directory":"./frontend"}
    ],
    "eslint.experimental.useFlatConfig": true,

    "prettier.eslintIntegration": true




}

