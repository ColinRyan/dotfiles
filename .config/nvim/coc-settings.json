{
    "languageserver": {
        "graphql": {
          "command": "graphql-lsp",
          "args": ["server", "-m", "stream"],
          "filetypes": ["typescript", "typescriptreact", "graphql"],
          "settings": {
            "graphql-config.load.legacy": true
          }
        },
        "phplang": {
           "command": "php",
           "args": ["vendor/felixfbecker/language-server/bin/php-language-server.php"],
           "filetypes": ["php"]
        },
        "bash": {
           "command": "bash-language-server",
           "filetypes": ["sh"],
           "args": ["start"],
           "ignoredRootPaths": ["~"]
           
        },
        "elmLS": {
          "command": "elm-language-server",
          "filetypes": ["elm"],
          "rootPatterns": ["elm.json"],
          "initializationOptions": {
            "elmAnalyseTrigger": "change"
          }
        }
        
    },
    "diagnostic.virtualText": true,
    "diagnostic.displayByAle": false,
    "tsserver.log":"normal",
    "javascript.implementationsCodeLens.enable": true,
    "suggest.noselect": false,
    "suggest.floatEnable": true,
    "suggest.enablePreview" : true,
    "codeLens.enable": true,
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.showUnused": true,
    "coc.preferences.enableFloatHighlight": true,
    "tsserver.implicitProjectConfig.checkJs": true,
    "tsserver.implicitProjectConfig.experimentalDecorators": true,
    "javascript.suggest.autoImports": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "python.jediEnabled": false

}

